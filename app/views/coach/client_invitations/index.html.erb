<h1><%= t('.title') %></h1>

<% if @client_invitations.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.client_invitation.name') %></th>
        <th><%= t('activerecord.attributes.client_invitation.email') %></th>
        <th><%= t('activerecord.attributes.client_invitation.status') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @client_invitations.each do |client_invitation| %>
        <tr>
          <td><%= client_invitation.name %></td>
          <td><%= client_invitation.email %></td>
          <td><%= t("statuses.#{client_invitation.status}") %></td>
          <td><%= link_to t('actions.show'), [:coach, client_invitation] %></td>
          <td><%= link_to t('actions.edit'), [:edit, :coach, client_invitation] %></td>
          <td>
            <%= link_to t('actions.delete'),
              [:coach, client_invitation],
              method: :delete,
              data: { confirm: t('confirmations.are_you_sure') }
            %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to t('common.new_thing', thing: t('activerecord.models.client_invitation')),
  [:new, :coach, :client_invitation],
  class: "btn" %>
