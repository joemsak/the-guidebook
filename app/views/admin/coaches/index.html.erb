<h1>Coaches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.name %></td>
        <td><%= coach.email %></td>
        <td><%= link_to 'Show', admin_coach_path(coach) %></td>
        <td><%= link_to 'Edit', edit_admin_coach_path(coach) %></td>
        <td>
          <%= link_to 'Destroy',
            admin_coach_path(coach),
            method: :delete,
            data: { confirm: 'Are you sure?' }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coach', new_admin_coach_path, class: "btn" %>
